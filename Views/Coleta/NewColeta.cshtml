@model ReciGanhaMVC.Models.NewColetaViewModel

@{
  ViewBag.Title = "Inclusão de Coleta";
}




<main>

 

  <article id="list-cards">
    @using (Html.BeginForm("Insert", "Coleta", FormMethod.Post))
    {
       <!--Configuração da mensagem Temporaria-->
      @if (@TempData["MensagemErro"] != null)
      {
        <div class="alert alert-danger" role="alert">
          @TempData["MensagemErro"]
        </div>
      }
      @if (@TempData["Mensagem"] != null)
      {
        <div class="alert alert-danger" role="alert">
          @TempData["Mensagem"]
        </div>
      }
      

      <!--<form action="POST">-->
      <section id="botao">
        <button type="submit" class="btnInserir btn btn-primary">Inserir coleta</button>
      </section>

      <section class="cards">
        <div class="card" style="width: 18rem;">
          <img src="assets/img/plastico.jpg" class="card-img-top " alt="garrafas de plastico">
          <div class="card-body">
            <h5 class="card-title text-dark">Plastico</h5>
            <select>
              <option value="1">
                Plastico
              </option>
            </select>
            <span>Insira o peso em Kg</span>
            <!--<input type="number" name="Peso" id="plastico">-->
            @Html.TextBoxFor(model => model.PesoPlastico, new { htmlAttributes = new { @class = "form-control" } })
          </div>
        </div>
        <div class="card" style="width: 18rem;">
          <img src="assets/img/metal.jpg" class="card-img-top " alt="garrafas de plastico">
          <div class="card-body">
            <h5 class="card-title text-dark">Aluminio</h5>
            <select>
              <option value="2">
                Aluminio
              </option>
            </select>
            <span>Insira o peso em Kg</span>
            @Html.TextBoxFor(model => model.PesoMetal, new { htmlAttributes = new { @class = "form-control" } })
            <!--<input type="number" name="Peso" id="aluminio">-->
          </div>
        </div>
      </section>
      <!--</form>-->
    }
