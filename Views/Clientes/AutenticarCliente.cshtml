@model ReciGanhaMVC.Models.ClienteViewModel
@{
ViewBag.Title = "Autenticar" ; }



<div class="background">
    <div class="container-fluid">
        @if (@TempData["Mensagem"] != null)
        {
            <div class="alert alert-succes" role="alert">
            @TempData["Mensagem"]</div>
        }

        <!--Configuração para exibir mensagem de erro -->
        @if (@TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["MensagemErro"]
            </div>
        }

        <section>
            <div class="darkgreenbox row">
                <div class="col-6 text-center">
                     <!--LOGO-->
                        <img id="logo" src="~/assets/img/Logo.png" alt="Logo ReciGanha">

<h2 id="h2" >Área de login do Cliente</h2>
@using (Html.BeginForm("Autenticar", "Clientes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container-b1">
        <div class="form-group">
            <label for="email">Email</label>
                @Html.TextBoxFor(model => model.EmailCliente, new { htmlAttributes = new { @class = "form-control", @type="email",@name="email"}} )
        </div>
        <div class="form-group">
            <label for="senha">senha</label>
                @Html.PasswordFor(model => model.PasswordString, new {  htmlAttributes = new {@class = "form-control",@name="senha"}})
        </div>
        <button type="submit" value="Acessar" class="btn btn-success"  >Acessar</button>
        <div class="form-group">
            <!--Outra forma de incluir um link para uma View-->
             <p><a asp-area="CadastrarCliente" asp-controller="Clientes" asp-action="IndexCadastro" > Nunca acessou o sistema? Clique aqui para registrar-se!</a> </p> 
            
        </div>
      </div>
    
}
