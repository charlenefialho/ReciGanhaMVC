<!-- Namespace da classe de Modelo-->
@model ReciGanhaMVC.Models.ClienteViewModel



<style>
	#title{
		color: white;
	}
	#subtitle{
		color: white;
	}

	#registre{
		background-color: #003829;
	}

	#lgCliente{
		margin-top: 8vh
	}
</style>
<!-- Erro not found-->


<!-- Titulo da view-->
@{
    ViewBag.Title = "Registrar";
}

<!--Configuração da mensagem Temporaria-->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div class="content">
    <div class="container">
        <div class="limiter">
		<div class="container-login100" id="lgCliente">
			<div class="wrap-login100" id="registre">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="assets/img/Logo.png" alt="IMG">
				</div>

				@using(Html.BeginForm("Registrar","Clientes",FormMethod.Post ,new{@class="login100-form validate-form"} ))
				{
					<!--É um método que gera e insere no HTML gerado na view um código para evitar que se falsifique o envio de dados para o servidor.-->
					@Html.AntiForgeryToken()
					<span class="login100-form-title" id="title">
						Crie a sua conta
					</span>
					<span class="login100-form-subtitle" id="subtitle">Preeencha os seus dados</span>

					<div class="wrap-input100 validate-input" data-validate = "nome de usuario requerido">
						@Html.TextBoxFor(model => model.NomeCliente, new{placeholder ="Nome de usuario", @class="input100"})
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
						@Html.TextBoxFor(model => model.EmailCliente, new{@placeholder="Email" , @class="input100"})
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Password is required">
						@Html.PasswordFor(model => model.PasswordString, new{@placeholder="Senha", @class="input100"})
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Cadastrar
						</button>
					</div>

					<div class="text-center p-t-136">
						<a class="txt2" asp-area="" asp-controller="Clientes" asp-action="IndexLogin">
							Já possui uma conta? faça login
							<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
						</a>
					</div>

				}

				
			</div>
		</div>
	</div>
        
    </div>
</div>














