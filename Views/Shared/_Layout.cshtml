<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reciganha_MVC</title>
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Style.css" />
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="~/css/CadastrarCliente.css"/>
    <link rel="stylesheet" href="~/css/Header.css"/>
    <link rel="stylesheet" href="~/css/NewColeta.css"/>
    <link rel="stylesheet" href="~/css/AutenticarCliente.css"/>
    <link rel="stylesheet" href="~/css/PageCliente.css"/>
    <link rel="stylesheet" href="~/css/AutenticarPostoDeColeta.css"/>
    <link rel="stylesheet" href="~/css/RegistrarPostoDeColeta.css"/>
    <link rel="stylesheet" href="~/css/BuscarPostosCliente.css"/>
    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
    <a class="navbar-brand" href="#"><img src="assets/img/Logo.png" id="logoNav" ></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <div class="collapse navbar-collapse justify-content-start" id="navbarNav">
        <ul class="navbar-nav align-items-center">
            <li class="nav-item active">
                <a class="nav-link text-white"  asp-area="" asp-controller="Home" asp-action="Index" >Home</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link text-white " asp-area="" asp-controller="" asp-action="">Sobre</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link text-white " asp-area="" asp-controller="Clientes" asp-action="IndexBuscarPostos">Postos de Coleta</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link text-white " asp-area="Cadastrar" asp-controller="PostoDeColeta" asp-action="IndexCadastroPosto">Coleta</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link text-white " asp-area="Cadastrar" asp-controller="Parceiro" asp-action="IndexPageParceiro">Parceiros</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link text-white " asp-area="" asp-controller="" asp-action="">Consultar Pontos</a>
            </li>
        </ul>
    </div>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav align-items-center">
            <li class="nav-item active">
                <a class="nav-link text-white " asp-area="" asp-controller="" asp-action="">Faça sua doação</a>
            </li>
            <li class="nav-item">
                <partial name="_LoginPartialCliente"></partial>
            </li>
        </ul>
    </div>
</nav>


     @RenderBody()
        
    

    


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/NewColeta.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
